<div class="portfolio-item" data-locations="{{serializedLocations}}" data-types="{{serializedTypes}}">
  <div class="inner">
    <img src="{{ image }}" />
    <div class="info">
      <h2>{{title}}</h2>
      <p>{{type}}</p>
      <p class="description">{{description}}</p>
      <span class="pull-right flag flag-{{ locations }}"></span>
    </div>
  </div>
</div>
