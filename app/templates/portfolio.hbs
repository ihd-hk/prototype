<div class="portfolio-item" data-locations="{{serializedLocations}}" data-codes="{{serializedCodes}}" data-disciplines="{{serializedDisciplines}}">
  <div class="inner">
    <div class="info">
      <h2>{{title_en}}</h2>
      <p>{{type}}</p>
      <p class="labels pull-right">
        {{#each locationNames}}
          <span class="label label-default">{{ this }}</span>
        {{/each}}
        {{#each codeNames}}
          <span class="label label-default">{{ this }}</span>
        {{/each}}
        {{#each disciplineNames}}
          <span class="label label-default">{{ this }}</span>
        {{/each}}
      </p>
    </div>
  </div>
</div>
